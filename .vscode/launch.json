    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "debugpy",
            "request": "launch",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "DEBUG": "1",
                "SQL_HOST": "localhost",
                "REDIS_DB_HOST": "localhost",
                "SQL_DATABASE": "local-db"
            },
            "program": "${workspaceFolder}/main/manage.py",
            "args": [
                "runserver",
                "8000",
                "--noreload"
            ],
            "django": true,
            "justMyCode": false
        }
    ]
}